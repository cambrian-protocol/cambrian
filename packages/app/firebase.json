{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "out",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "cleanUrls": true,
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": [
                            "https://gnosis-safe.io",
                            "https://app.cambrianprotocol.com/api/pinPinata"
                        ]
                    },
                    {
                        "key": "Access-Control-Allow-Methods",
                        "value": "GET,HEAD,PUT,PATCH,POST,DELETE"
                    },
                    {
                        "key": "Access-Control-Allow-Headers",
                        "value": "X-Requested-With, content-type, Authorization"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/api/pinPinata",
                "function": "pinPinata"
            },
            {
                "source": "/api/addWebhook",
                "function": "addWebhook"
            },
            {
                "source": "/api/errorLog",
                "function": "errorLog"
            },
            {
                "destination": "/composer/composition/[compositionStreamID].html",
                "regex": "^/composer/composition/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/proposal/edit/[proposalStreamID].html",
                "regex": "^/proposal/edit/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/proposal/new/[proposalStreamID].html",
                "regex": "^/proposal/new/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/template/edit/[templateStreamID].html",
                "regex": "^/template/edit/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/template/new/[templateStreamID].html",
                "regex": "^/template/new/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/proposal/[proposalStreamID].html",
                "regex": "^/proposal/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/solver/[solverAddress].html",
                "regex": "^/solver/([^/]+?)(?:/)?$"
            },
            {
                "destination": "/template/[templateStreamID].html",
                "regex": "^/template/([^/]+?)(?:/)?$"
            }
        ]
    }
}
